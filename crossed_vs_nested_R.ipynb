   "source": [
    "## Advanced Examples\n",
    "\n",
    "### Mixed Designs: Both Crossed and Nested Effects"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Example of a mixed design: Students nested in schools, but crossed with items\n",
    "simulate_mixed_design <- function(n_schools = 3, n_students_per_school = 15, n_items = 12) {\n",
    "  \n",
    "  data <- data.frame()\n",
    "  student_id <- 1\n",
    "  \n",
    "  # School effects\n",
    "  school_effects <- rnorm(n_schools, 0, 1.5)\n",
    "  \n",
    "  # Item effects (crossed)\n",
    "  item_effects <- rnorm(n_items, 0, 0.8)\n",
    "  \n",
    "  for (school in 1:n_schools) {\n",
    "    school_name <- paste0(\"School_\", school)\n",
    "    \n",
    "    # Student effects within school\n",
    "    student_effects <- rnorm(n_students_per_school, 0, 1.2)\n",
    "    \n",
    "    for (student in 1:n_students_per_school) {\n",
    "      student_name <- paste0(\"Student_\", sprintf(\"%03d\", student_id))\n",
    "      student_id <- student_id + 1\n",
    "      \n",
    "      # Each student responds to all items\n",
    "      for (item in 1:n_items) {\n",
    "        item_name <- paste0(\"Item_\", sprintf(\"%02d\", item))\n",
    "        \n",
    "        score <- 75 +  # Grand mean\n",
    "                school_effects[school] +     # School effect (nested)\n",
    "                student_effects[student] +   # Student effect (nested in school)\n",
    "                item_effects[item] +         # Item effect (crossed)\n",
    "                rnorm(1, 0, 1.0)            # residual error\n",
    "        \n",
    "        data <- rbind(data, data.frame(\n",
    "          school = factor(school_name),\n",
    "          student = factor(student_name),\n",
    "          item = factor(item_name),\n",
    "          score = score\n",
    "        ))\n",
    "      }\n",
    "    }\n",
    "  }\n",
    "  \n",
    "  return(data)\n",
    "}\n",
    "\n",
    "# Generate mixed design data\n",
    "mixed_data <- simulate_mixed_design(n_schools = 3, n_students_per_school = 10, n_items = 8)\n",
    "\n",
    "cat(\"Mixed design data dimensions:\", dim(mixed_data), \"\\n\")\n",
    "head(mixed_data, 10)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Fit mixed design model\n",
    "cat(\"Fitting Mixed Design Model...\\n\")\n",
    "cat(\"Students nested in schools, crossed with items\\n\")\n",
    "cat(\"Model formula: score ~ 1 + (1|school/student) + (1|item)\\n\\n\")\n",
    "\n",
    "mixed_model <- lmer(score ~ 1 + (1|school/student) + (1|item), data = mixed_data)\n",
    "\n",
    "summary(mixed_model)\n",
    "\n",
    "# Visualize the mixed structure\n",
    "p1 <- ggplot(mixed_data, aes(x = school, y = score, fill = school)) +\n",
    "  geom_boxplot(alpha = 0.7) +\n",
    "  labs(title = \"Scores by School (Nested Effect)\", x = \"School\", y = \"Score\") +\n",
    "  theme(legend.position = \"none\")\n",
    "\n",
    "p2 <- ggplot(mixed_data, aes(x = item, y = score, fill = item)) +\n",
    "  geom_boxplot(alpha = 0.7) +\n",
    "  labs(title = \"Scores by Item (Crossed Effect)\", x = \"Item\", y = \"Score\") +\n",
    "  theme(legend.position = \"none\", axis.text.x = element_text(angle = 45, hjust = 1))\n",
    "\n",
    "grid.arrange(p1, p2, ncol = 2)\n",
    "\n",
    "# Variance components for mixed model\n",
    "cat(\"\\nVariance Components (Mixed Model):\\n\")\n",
    "print(VarCorr(mixed_model))"
   ]
