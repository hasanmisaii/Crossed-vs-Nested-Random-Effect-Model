    "# Model selection and comparison tools\n",
    "cat(\"MODEL SELECTION IN R\\n\")\n",
    "cat(\"===================\\n\\n\")\n",
    "\n",
    "# Function to compare multiple models\n",
    "compare_models <- function(...) {\n",
    "  models <- list(...)\n",
    "  model_names <- as.character(substitute(list(...)))[-1]\n",
    "  \n",
    "  comparison <- data.frame(\n",
    "    Model = model_names,\n",
    "    AIC = sapply(models, AIC),\n",
    "    BIC = sapply(models, BIC),\n",
    "    LogLik = sapply(models, logLik),\n",
    "    df = sapply(models, function(x) attr(logLik(x), \"df\")),\n",
    "    stringsAsFactors = FALSE\n",
    "  )\n",
    "  \n",
    "  comparison$deltaAIC <- comparison$AIC - min(comparison$AIC)\n",
    "  comparison$deltaBIC <- comparison$BIC - min(comparison$BIC)\n",
    "  \n",
    "  return(comparison[order(comparison$AIC), ])\n",
    "}\n",
    "\n",
    "# Example: Compare our models\n",
    "if(exists(\"crossed_model\") && exists(\"nested_model3\") && exists(\"mixed_model\")) {\n",
    "  cat(\"Example model comparison (note: different datasets, so not directly comparable):\\n\")\n",
    "  # Note: This is just for demonstration - these models use different datasets\n",
    "  print(\"Models use different datasets - comparison for syntax demonstration only\")\n",
    "}\n",
    "\n",
    "cat(\"\\nMODEL DIAGNOSTIC FUNCTIONS:\\n\")\n",
    "cat(\"- plot(model): Diagnostic plots\\n\")\n",
    "cat(\"- ranef(model): Extract random effects\\n\")\n",
    "cat(\"- fixef(model): Extract fixed effects\\n\")\n",
    "cat(\"- VarCorr(model): Variance components\\n\")\n",
    "cat(\"- residuals(model): Model residuals\\n\")\n",
    "cat(\"- fitted(model): Fitted values\\n\")\n",
    "cat(\"- confint(model): Confidence intervals\\n\")\n",
    "cat(\"- anova(model1, model2): Likelihood ratio test\\n\")"
