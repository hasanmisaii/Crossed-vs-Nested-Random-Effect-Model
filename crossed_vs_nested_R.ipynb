   "source": [
    "# Guide to lme4 syntax\n",
    "cat(\"lme4 RANDOM EFFECTS SYNTAX GUIDE\\n\")\n",
    "cat(\"==============================\\n\\n\")\n",
    "\n",
    "syntax_guide <- data.frame(\n",
    "  Design = c(\n",
    "    \"Simple random intercept\",\n",
    "    \"Crossed random effects\",\n",
    "    \"Nested random effects\",\n",
    "    \"Random slopes\",\n",
    "    \"Mixed design\"\n",
    "  ),\n",
    "  Formula = c(\n",
    "    \"(1|group)\",\n",
    "    \"(1|factor1) + (1|factor2)\",\n",
    "    \"(1|factor1/factor2) or (1|factor1) + (1|factor1:factor2)\",\n",
    "    \"(variable|group)\",\n",
    "    \"(1|nested_factor1/nested_factor2) + (1|crossed_factor)\"\n",
    "  ),\n",
    "  Example = c(\n",
    "    \"(1|subject)\",\n",
    "    \"(1|subject) + (1|item)\",\n",
    "    \"(1|school/classroom)\",\n",
    "    \"(time|subject)\",\n",
    "    \"(1|school/student) + (1|item)\"\n",
    "  ),\n",
    "  stringsAsFactors = FALSE\n",
    ")\n",
    "\n",
    "print(syntax_guide)\n",
    "\n",
    "cat(\"\\n\\nKEY POINTS:\\n\")\n",
    "cat(\"- Use | to separate random effects specification from grouping factor\\n\")\n",
    "cat(\"- Use / for nesting (A/B is equivalent to A + A:B)\\n\")\n",
    "cat(\"- Use + to add separate random effects\\n\")\n",
    "cat(\"- Use : for interactions\\n\")\n",
    "cat(\"- (1|group) = random intercept only\\n\")\n",
    "cat(\"- (var|group) = random intercept and slope for 'var'\\n\")\n",
    "cat(\"- (0+var|group) = random slope only (no random intercept)\\n\")"
   ]
  },
